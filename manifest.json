{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.3.1",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "author": "ddtcorex",
  "homepage_url": "https://github.com/ddtcorex/omni-ai",

  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_title": "__MSG_extName__"
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["storage", "activeTab", "contextMenus", "identity"],

  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+O",
        "mac": "Alt+O"
      },
      "description": "__MSG_popup_title__"
    },
    "quick_ask": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "__MSG_popup_quickAsk__"
    },
    "quick_rephrase": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "__MSG_action_rephrase__"
    },
    "quick_translate": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "__MSG_action_translate__"
    },
    "quick_fix_grammar": {
      "description": "__MSG_action_grammar__"
    },
    "quick_summarize": {
      "description": "__MSG_action_summarize__"
    },
    "quick_explain": {
      "description": "__MSG_action_explain__"
    }
  },

  "oauth2": {
    "client_id": "923297272333-ho5udq7phe9mplbdd43s4m8c58aa0k9b.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },

  "key": ""
}
